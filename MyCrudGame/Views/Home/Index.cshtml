@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Information</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

    <table class="table table-striped table-dark" style="border:1px solid black;margin: auto;width:700px  ">
        <tr table table-striped table-dark>
            <td style="width:14%;">ID</td>
            <td style="width:14%;">Nickname</td>
            <td style="width:14%;">icon</td>
            <td style="width:14%;">Max Experience</td>
            <td style="width:14%;">Min Experience</td>
            <td style="width:14%;">Name</td>
        </tr>
        @foreach (DataRow ra in Model.Rows)
        {
            <tr table table-striped table-dark>
                <td style="width:14%;">@Convert.ToString(ra["Id"])</td>
                <td style="width:14%;">@Convert.ToString(ra["NickName"])</td>
                <td style="width:14%;">@Convert.ToString(ra["icon"])</td>
                <td style="width:14%;">@Convert.ToString(ra["MaxExperience"])</td>
                <td style="width:14%;">@Convert.ToString(ra["MinExperience"])</td>
                <td style="width:14%;">@Convert.ToString(ra["Name"])</td>
          
            </tr>
        }

    </table>
    <table style="border:1px solid black;margin: auto;width:700px">
        <tr>
            <td style="width:14%;">
                @if (TempData["ERROR"] != null)
                {
                    <hr />
                    <span style="color:red; font-size:14px" ;>
                        @TempData["ERROR"].ToString();
                    </span>
                }
                @if (TempData["MSG"] != null)
                {
                    <hr />
                    <span style="color:navy; font-size:14px" ;>
                        @TempData["MSG"].ToString()
                    </span>
                }



            </td>

        </tr>
    </table>
